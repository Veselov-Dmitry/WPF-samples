<Window x:Class="ThreadWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="250"
        Width="225"
        MaxWidth="225"
        MinWidth="225">
    <WrapPanel>
        <WrapPanel Margin="20"
                   Orientation="Vertical">
            <TextBlock x:Name="txb"
                       Width="150"
                       Margin="10"
                       Background="Beige" />
            <TextBlock x:Name="txb2"
                       Width="150"
                       Margin="10"
                       Background="Beige" />
            <ProgressBar x:Name="Prb" Height="15" Margin="10,0" Visibility="Hidden"
                         IsIndeterminate="True" />
            <Button x:Name="Btn" Width="150" Click="Button_Click" Content="Start" HorizontalAlignment="Center" Padding="10" />
        </WrapPanel>
    </WrapPanel>
</Window>
